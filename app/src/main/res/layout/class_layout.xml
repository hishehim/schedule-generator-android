<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:hint="CSCI-103422"
        android:maxEms="8"
        android:minEms="8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/location"
        android:layout_toStartOf="@+id/location" />

    <TextView
        android:id="@+id/credit"
        android:hint="credit "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/days"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/days"
        android:hint="MoTuWeThFrSaSu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time"
        android:hint="00:00am - 00:00pm"
        android:layout_marginLeft="@dimen/list_margin"
        android:layout_toRightOf="@id/days"
        android:layout_toEndOf="@id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/location"
        android:hint="location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time" />

    <TextView
        android:id="@+id/instructor"
        android:hint="instructor"
        android:layout_below="@id/location"
        android:layout_alignLeft="@id/location"
        android:layout_alignStart="@id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>